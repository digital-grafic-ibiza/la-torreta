<% content_for(:title) do %>
  <%= t('contact.title') %>
<% end %>
<% content_for(:description) do %>
  La Torreta Ibiza
  Plaça Dalt Vila, 10, 07800 Eivissa
  +34 971 300 411
<% end %>
<% content_for(:og_image) do %>
  <%= cl_image_path('location/basement-2.png') %>
<% end %>
<div class="banner bannerContact">
  <div class="banner-content">
    <h1><%= t('contact.title') %></h1>
  </div>
</div>

<div class="wrapper">
  <div class="container section">
    <div class="row">
      <div class="col-sm-12 col-md-10 col-md-offset-1">
        <div class="text-center">
          <h1><%= t('contact.reserve') %></h1>
          <iframe src=" https://module.lafourchette.com/en_GB/module/496493-ec9dc " id="reserve"></iframe>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="text-center emailTorreta" style="padding: 20px;">
          <h1>La Torreta Ibiza</h1>
          <p>Plaça Dalt Vila, 10, 07800 <strong>Eivissa</strong></p>
          <p><i class="fas fa-phone"></i> <span ><%= tel_to('+34 971 300 411') %></span> </p>
          <p><%= mail_to("info@latorretaibiza.com", "info@latorretaibiza.com") %></p>
        </div>
        <div
          id="map"
          style="width: 100%;
          height: 400px;"
          data-markers="<%= @markers.to_json %>">
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_API_SERVER_KEY'] %>"></script>
<%= javascript_pack_tag "map" %>
