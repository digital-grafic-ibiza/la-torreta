<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do  %>
    <%= cl_image_tag("logo-cut-out.png", :effect=>"auto_contrast", alt: "la-torreta-brand") %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to t('location.title'), location_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t('food_and_wines.title'), food_and_wines_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t('about_us.title'), about_us_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t('menu.title'), menu_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to t('contact.title'), contact_path, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to t('location.title'), location_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
        <li>
          <%= link_to t('food_and_wines.title'), food_and_wines_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
        <li>
          <%= link_to t('about_us.title'), about_us_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
        <li>
          <%= link_to t('menu.title'), menu_path, class: "navbar-wagon-item navbar-wagon-link" %>
          <%= link_to t('contact.title'), contact_path, class: "navbar-wagon-item navbar-wagon-link" %>
        </li>
      </ul>
    </div>
  </div>
</div>
